<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sanedriod.sqlrunner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/run_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sanedriod.sqlrunner.MainActivity"
            android:icon="@drawable/run_icon"
            android:title="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sanedriod.sqlrunner.QueryResult"
            android:theme="@style/OutputTheme" />
        <activity
            android:name="com.sanedriod.sqlrunner.Settings"
            android:label="Settings"
            android:theme="@style/SettingTheme" />
        <activity
            android:name="com.sanedriod.sqlrunner.About"
            android:label="About"
            android:theme="@style/AboutTheme" />
    </application>

</manifest>